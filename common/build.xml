        	<reference refid="pxzzmj.dir" torefid="base.dir"/> 
        	<reference refid="pxzzmj.jar" torefid="jar.file"/>
    	</ant> 
    	
    	<ant antfile="build.xml" dir="../commdef" inheritall="true" inheritrefs="true">
        	<reference refid="px258mj.dir" torefid="base.dir"/> 
        	<reference refid="px258mj.jar" torefid="jar.file"/>
    	</ant>
		<ant antfile="build.xml" dir="../commdef" inheritall="true" inheritrefs="true">
			<reference refid="px3gt.dir" torefid="base.dir"/>
			<reference refid="px3gt.jar" torefid="jar.file"/>
		</ant>
		<ant antfile="build.xml" dir="../commdef" inheritall="true" inheritrefs="true">
			<reference refid="px6gt.dir" torefid="base.dir"/>
			<reference refid="px6gt.jar" torefid="jar.file"/>
		</ant>

		<!-- 创建zip -->
    	<zip basedir="${gameb.dir}/games" zipfile="${gameb.dir}/games.zip"/> 
    	<zip basedir="${gameb.dir}/conf" zipfile="${gameb.dir}/conf.zip"/> 
    	<zip basedir="${gameb.dir}/lib" zipfile="${gameb.dir}/lib.zip"/> 
    	
    	<delete dir="${gameb.dir}/games"/>
    	<delete dir="${gameb.dir}/conf"/>
    </target> 
</project> 
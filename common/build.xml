    	<ant antfile="build.xml" dir="../commdef" inheritall="true" inheritrefs="true">
        	<reference refid="zjmj.dir" torefid="base.dir"/> 
        	<reference refid="zjmj.jar" torefid="jar.file"/>
    	</ant> 
    	
    	<ant antfile="build.xml" dir="../commdef" inheritall="true" inheritrefs="true">
        	<reference refid="pdk.dir" torefid="base.dir"/> 
        	<reference refid="pdk.jar" torefid="jar.file"/>
    	</ant> 

    	<ant antfile="build.xml" dir="../commdef" inheritall="true" inheritrefs="true">
        	<reference refid="xymj.dir" torefid="base.dir"/> 
        	<reference refid="xymj.jar" torefid="jar.file"/>
    	</ant> 
    	
    	<ant antfile="build.xml" dir="../commdef" inheritall="true" inheritrefs="true">
        	<reference refid="ptmj.dir" torefid="base.dir"/> 
        	<reference refid="ptmj.jar" torefid="jar.file"/>
    	</ant> 
    	

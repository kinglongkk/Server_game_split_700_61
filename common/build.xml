        	<reference refid="ddz.dir" torefid="base.dir"/> 
        	<reference refid="ddz.jar" torefid="jar.file"/>
    	</ant> 
    	
    	<ant antfile="build.xml" dir="../commdef" inheritall="true" inheritrefs="true">
        	<reference refid="fzmj.dir" torefid="base.dir"/> 

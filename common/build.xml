	<property id="px258mj.dir" name="px258mj.dir" location="../PX258MJ" />
	<property id="px258mj.jar" name="px258mj.jar" location="../PX258MJ/build/PX258MJ.jar" />
    <target name="run"> 
        <ant antfile="build.xml" dir="../gameServer" inheritall="false" inheritrefs="false"/>
    	
        <ant antfile="build.xml" dir="../commdef" inheritall="true" inheritrefs="true">
        	<reference refid="hzmj.dir" torefid="base.dir"/> 
        	<reference refid="hzmj.jar" torefid="jar.file"/>
        </ant> 
    	
    	<ant antfile="build.xml" dir="../commdef" inheritall="true" inheritrefs="true">
        	<reference refid="wzmj.dir" torefid="base.dir"/> 
        	<reference refid="wzmj.jar" torefid="jar.file"/>
    	</ant> 
    	
